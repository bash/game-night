{% extends 'base' %}

{% block title %}Login{% endblock title %}

{% block content %}
<form method="post">
    <p>
        Success! An email is on it's way to you~<br>
        Enter the login code below:
    </p>

    {% if page.invalid_code %}
        <div class="message -error">
            <span class="icon"><svg><use href="/icons/alert-triangle.svg#icon"></use></svg></span>
            <span class="label"><em>Hmmmmmmmmm</em> That's not a valid code, maybe it has expired? ðŸ¤”</span>
        </div>
    {% endif %}

    <fieldset>
        <input type="number" placeholder="123456" size="6" name="code" required autocomplete="off" inputmode="numeric" data-1p-ignore />
    </fieldset>

    <fieldset class="-actions">
        <button type="submit">Login</button>
    </fieldset>
</form>
{% endblock content %}
