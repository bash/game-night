<!doctype html>
<html lang="en" class="_{{ page_type }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="color-scheme" content="light dark">
    <link rel="preload" as="font" href="/fonts/vollkorn/Vollkorn-Regular.woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="/fonts/vollkorn/Vollkorn-Italic.woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="/fonts/vollkorn/Vollkorn-Bold.woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="/fonts/inter/Inter-Bold.woff2?v=3.19" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/main.css">
    <title>Tau's Game Night</title>
</head>
<body>
    <a href="#main" tabindex="0" class="skip-link">Skip to content</a>

    <nav>
        <a href="/" class="_home{% if page_type == 'home' %} -active{% endif %}" title="Home">
            <svg><use href="/icons/home.svg#icon" /></svg>
        </a>
        <a href="/invite" class="_invite{% if page_type == 'invite' %} -active{% endif %}" title="Get Invited">
            <svg><use href="/icons/mail-open.svg#icon" /></svg>
        </a>
        <a href="/register" class="_register{% if page_type == 'register' %} -active{% endif %}" title="Register">
            <svg><use href="/icons/clipboard-signature.svg#icon" /></svg>
        </a>
        <a href="/poll" class="_poll{% if page_type == 'poll' %} -active{% endif %}" title="Poll">
            <svg><use href="/icons/calendar-check.svg#icon" /></svg>
        </a>
        <a href="/play" class="_play{% if page_type == 'play' %} -active{% endif %}" title="Play">
            <svg><use href="/icons/dices.svg#icon" /></svg>
        </a>
    </nav>

    <main id="main">
        <header>
            <div class="chapter-number">
                Chapter {% block chapter_number %}{% endblock chapter_number %}
            </div>
            <h1>
                {% block title %}
                {% endblock title %}
            </h1>
        </header>
        {% block content %}{% endblock content %}
    </main>

    {% if user %}
        <footer>
            <form action="/logout" method="post">
                <div>
                    Signed in as <strong>{{user.name}}</strong>.&nbsp;&nbsp;
                    <button>Log out</button>
                </div>
                <input type="hidden" name="redirect" value="{{uri}}">
            </form>
        </footer>
    {% endif %}
</body>
</html>
